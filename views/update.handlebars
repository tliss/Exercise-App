<h1>Taylor's Workout Tracker</h1>
    <fieldset id="editField">
        <legend>Edit Entry</legend>
        <form>
            <input style="display:none;" type="number" name="number" id="id" value="{{id}}">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" value="{{name}}">
            <br>
            <label for="reps">Reps</label>
            <input type="number" name="reps" id="reps" value="{{reps}}">
            <br>
            <label for="weight">Weight</label>
            <input type="number" name="weight" id="weight" value="{{weight}}">
            <br>
            <label for="date">Date</label>
            <input type="date" name="date" id="date" value="{{date}}">
            <br>
            <label for="lbs">Lbs?</label>
            {{#if lbs}}
                <input type="radio" name="lbs" id="lbsYes" value="1" checked="checked">Yes
                <input type="radio" name="lbs" id="lbsNo" value="0">No
            {{else}}
                <input type="radio" name="lbs" id="lbsYes" value="1">Yes
                <input type="radio" name="lbs" id="lbsNo" value="0" checked="checked">No
            {{/if}}
            <br>
            <input type="submit" id="submitEdit">
        </form>
        <form action="/">
            <input type="submit" id="back" value="Back">
        </form>
</fieldset>

