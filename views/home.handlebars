<h1>MySQL Results:</h1>
<p>{{results}}</p>

<table id="dataTable">
    <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Date</th>
        <th>lbs?</th>
    </tr>
    {{#each rows}}
    <tr>
        <td>{{name}}</td>
        <td>{{reps}}</td>
        <td>{{weight}}</td>
        <td>{{moment date format="MM-DD-YYYY"}}</td>
        <td>{{lbs}}</td>
        <td>
            <form method="post"> 
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="button" value="Delete" onclick="deleteRow('dataTable', this)" />
            </form>
	</td>
    </tr>
    {{/each}}
</table>

